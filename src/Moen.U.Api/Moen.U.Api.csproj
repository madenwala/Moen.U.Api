<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Mohammed Adenwala</Authors>
    <Product>U by Moen API</Product>
    <Description>API to control your U by Moen shower hardware. This package provides a .NET Standard 1.4 library to integrate with any C# application that can support such .NET Standard library.</Description>
    <PackageProjectUrl>https://github.com/madenwala/Moen.U.Api</PackageProjectUrl>
    <RepositoryUrl>https://github.com/madenwala/Moen.U.Api</RepositoryUrl>
    <PackageTags>Moen, Shower, Home Automation</PackageTags>
    <Copyright>Copyright © 2019</Copyright>
    <Version>0.9.1</Version>
    <AssemblyVersion>0.9.0.0</AssemblyVersion>
    <FileVersion>0.9.0.0</FileVersion>
    <PackageReleaseNotes>Initial release of API</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

</Project>
